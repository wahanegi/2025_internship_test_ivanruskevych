  <div class="container">
    <a href="/" class="navbar-brand fw-bold text-primary">Tweeter</a>
    <div class="d-flex">
      <% if user_signed_in? %>
        <%= link_to "Account settings", edit_user_registration_path, class: "btn btn-outline-primary me-2" %>
