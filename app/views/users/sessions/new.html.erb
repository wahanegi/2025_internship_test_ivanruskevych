<section class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <header class="card-header text-center">
          <h2>Log in</h2>
        </header>

        <article class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
            <div class="field mb-3">
              <%= f.label :email, for: "email", class: "form-label" %><br />
              <%= f.email_field :email, id: "email", class: "form-control", required: true, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field mb-3">
              <%= f.label :password, for: "password", class: "form-label" %><br />
              <%= f.password_field :password, id: "password", class: "form-control", required: true, autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, id: "remember_me", class: "form-check-input" %>
                <%= f.label :remember_me, for: "remember_me", class: "form-check-label" %>
              </div>
            <% end %>

              <div class="actions d-grid">
                <%= f.submit "Log in", class: "btn btn-primary" %>
              </div>
          <% end %>

            <div class="text-center mt-3">
              <%= render "users/shared/links", class: "text-decoration-none" %>
              <%= link_to "Back to main page", "/" %>
            </div>

        </article>
      </div>
    </div>
  </div>
</section>
